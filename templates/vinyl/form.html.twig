{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('styles/app.css') }}">
{% endblock %}

{% block body %}
	<div class="container">


		<form action="{{ path('app_form') }}" method="post" class="form-msg">
			<fieldset>
				<legend>Formulaire d'envoyer un email</legend>
				<div class="form-group">
					<label for="nom">Objet:</label>
					<input type="text" id="nom" name="nom" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="adresse_source">De:</label>
					<input type="email" id="adresse_source" name="adresse_source" class="form-control" required>
				</div>
				<div class="form-group">
					<label for="adresse_destination">Ã€ :</label>
